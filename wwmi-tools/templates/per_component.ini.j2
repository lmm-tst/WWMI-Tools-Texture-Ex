[Resource{{ buffer_name }}Buffer]
type = Buffer
format = {{ buffer.layout.semantics[0].get_format() }}
stride = {{ buffer.layout.stride }}
filename = Meshes/{{ buffer_name }}.buf

{%- endfor %}

